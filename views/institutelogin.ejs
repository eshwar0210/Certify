<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Institute Login</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link
      rel="stylesheet"
      type="text/css"
      href="vendor/bootstrap/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      type="text/css"
      href="css/main.css"
    />
  </head>
  <body>
    <div class="limiter">
      <div class="container-login100">
        <div class="wrap-login100 p-b-160 p-t-50">
          <form method="post" class="login100-form">
            <span class="login100-form-title p-b-43">Institute Login</span>

            <!-- Email Input -->
            <div
              class="wrap-input100 rs1 validate-input"
              style="border-top-right-radius: 10px"
            >
              <input
                class="input100"
                type="email"
                name="email"
                placeholder="Email"
                required
              />
            </div>

            <!-- Password Input -->
            <div
              class="wrap-input100 rs1 validate-input"
              style="border-top-right-radius: 10px"
            >
              <input
                class="input100"
                type="password"
                name="password"
                placeholder="Password"
                required
              />
            </div>

            <!-- Login Button -->
            <div class="container-login100-form-btn">
              <button type="submit" class="login100-form-btn">Sign in</button>
            </div>

            <!-- Add Institute Link -->
            <div class="text-center mt-3">
              <small>
                <a href="/addInstitute" class="text-dark" style="text-decoration: none;" onmouseover="this.style.color='#000';" onmouseout="this.style.color='#6c757d';">
                  Not registered?
                </a>
              </small>
            </div>
            
          </form>
        </div>
      </div>
    </div>

    <script src="vendor/bootstrap/js/bootstrap.min.js"></script>
  </body>
</html>
