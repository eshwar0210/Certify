<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Student Sign Up</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" type="text/css" href="vendor/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="css/main.css" />
  </head>
  <body>
    <div class="limiter">
      <div class="container-login100">
        <div class="wrap-login100 p-b-160 p-t-50">
          <form method="post" action="/studentsignup" class="login100-form validate-form">
            <span class="login100-form-title p-b-43">Student Sign Up</span>

            <!-- Name Input -->
            <div class="wrap-input100 rs1 validate-input" data-validate="Name is required" style="border-top-right-radius: 10px;">
              <input class="input100" type="text" name="name" required />
              <span class="label-input100">Name</span>
            </div>

            <!-- Email Input -->
            <div class="wrap-input100 rs1 validate-input" data-validate="Email is required" style="border-top-right-radius: 10px;">
              <input class="input100" type="email" name="email" required />
              <span class="label-input100">Email</span>
            </div>

            <!-- Roll Number Input -->
            <div class="wrap-input100 rs1 validate-input" data-validate="Roll number is required" style="border-top-right-radius: 10px;">
              <input class="input100" type="text" name="rollNumber" required />
              <span class="label-input100">Roll Number</span>
            </div>

            <!-- Password Input -->
            <div class="wrap-input100 rs1 validate-input" data-validate="Password is required" style="border-top-right-radius: 10px;">
              <input class="input100" type="password" name="password" required />
              <span class="label-input100">Password</span>
            </div>

            <div class="container-login100-form-btn">
              <button type="submit" class="login100-form-btn">Sign Up</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <script src="vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="js/main.js"></script>
  </body>
</html>
